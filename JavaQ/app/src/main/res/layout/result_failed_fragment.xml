<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/score_area"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_marginBottom="0dp"
        android:background="@color/failed_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/result_comment"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />


    <View
        android:id="@+id/circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/bg_circle"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />



    <TextView
        android:id="@+id/result_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/slash"
        tools:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/result_score_denominator"
        android:layout_marginTop="79dp" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:paddingLeft="6dp"
        android:paddingRight="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/result_score_denominator"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/result_score_denominator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginTop="91dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/slash"
        android:text="8" />

    <TextView
        android:id="@+id/result_comment"
        android:layout_width="109dp"
        android:layout_height="104dp"
        android:layout_marginTop="32dp"
        android:paddingBottom="60dp"
        app:layout_constraintTop_toBottomOf="@+id/circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:text="Failed..."
        app:layout_constraintHorizontal_bias="0.498" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/continue_button_customize"
        android:padding="8dp"
        android:text="@string/back_button"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/result_comment" />

    <Button
        android:id="@+id/retry_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/retry_button_customize"
        android:padding="8dp"
        android:text="@string/retry_button"
        android:textColor="@color/main_color"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/home_button"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>